<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :share_mode, 'Share mode' %>
  <%= f.select :share_mode, [['Public', true], ['Private', false]], {}, {class: 'form-control'} %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.file_field :images, multiple: true, class: 'hide' %>
</div>
<div class="upload-album">
  <div class="image-upload-wrap-album">
    <input class="file-upload-input" id="image-album" accept="image/*" />
    <span class="glyphicon glyphicon-plus"></span>
  </div>
</div>

