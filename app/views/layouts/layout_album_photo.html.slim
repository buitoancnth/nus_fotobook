doctype html
html
  head
    title = t('title_app')
    = render 'layouts/head_include'
  body
    = render 'layouts/header'
    .container.main-feed
      -flash.each do |message_type, message|
        div class=("alert alert-#{message_type}")
          a.close href="#" data-dismiss="alert" &times;
          = message
      .row
        = render 'layouts/left_body'
        .col-sm-10.col-xs-12.photo_album
          ul.nav.nav-pills.center-pills role="tablist"
            li= link_to t('.photos'), photos_path
            li= link_to t('.albums'), albums_path
          = yield
      = render 'layouts/footer'
