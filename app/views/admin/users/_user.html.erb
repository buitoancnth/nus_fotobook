<tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= format_time(user.last_sign_in_at) %></td>
    <td><%= user.is_admin ? t('.admin') : t('.user') %></td>
    <td>
      <%= link_to edit_admin_user_path(user), class: "btn btn-success btn-xs" do %>
        <span class="glyphicon glyphicon-edit"></span> <%= t('.edit') %>
      <% end %>
      <% unless user.is_admin? %>
        <%= link_to admin_user_path(user), method: :delete, class: "btn btn-danger btn-xs", data: {confirm: t('are_you_sure')} do %>
          <span class="glyphicon glyphicon-remove"></span> <%= t('.delete') %>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
</tbody>
