<div class="add_photo_album">
  <%= link_to new_photo_path do %>
    <button type="button" class="btn btn-primary"><%= t('.add_photo') %></button>
  <% end %>
</div>
<hr>
<div class="row">
  <% @photos.each_with_index do |photo, index| %>
    <div class="col-lg-3 col-md-4 col-xs-12">
      <div class="thumbnail">
        <%= image_tag(photo.image.url(:thumb), class: "img-responsive") %>
        <div class="caption">
          <p><%= photo.title %></p>
          <%= link_to edit_photo_path(photo) do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
        </div>
        <% unless photo.share_mode %>
          <span class = "fa fa-lock"></span>
        <% end %>
      </div>
    </div>
    <% if index == 3 %>
      </div><div class="row">
    <% end %>
  <% end %>
</div>
